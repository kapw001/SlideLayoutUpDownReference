<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kaichunlin.transition.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Toolbar">
        <activity
            android:name="com.kaichunlin.transition.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kaichunlin.transition.app.DrawerMenuItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kaichunlin.transition.app.DrawerViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kaichunlin.transition.app.DrawerGradientActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kaichunlin.transition.app.SlidingUpPanelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kaichunlin.transition.app.SlidingUpPanelRotateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kaichunlin.transition.app.ViewPagerActivity"
            android:label="@string/title_view_pager"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.kaichunlin.transition.app.ObservableScrollViewActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
